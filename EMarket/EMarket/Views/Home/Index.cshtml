@{
    ViewBag.Title = "Home Page";
}

<section class="hero-banner">
    <div class="container">
        <div class="row no-gutters align-items-center pt-60px">
            <div class="col-5 d-sm-block" style="position: inherit">
                <div class="hero-banner__img">
                    <img class="img-fluid" src="~/home.png" alt="">
                </div>
            </div>
            <div class="col-sm-7 col-lg-6 offset-lg-1 pl-4 pl-md-5 pl-lg-0" style="position: inherit">
                <div class="hero-banner__content">
                    <h4>Shop is fun</h4>
                    <h1 style="font-weight:bold">Browse Our Premium Products.</h1>
                    <p></p>
                    <a class="btn btn-outline-info" href="@Url.Action("listProducts","Products")">Browse Now</a>
                </div>
            </div>
        </div>
    </div>
</section>